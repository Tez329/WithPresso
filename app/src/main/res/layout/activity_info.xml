<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cafe_info_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff0000"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/info_back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:src="@drawable/back_arrow"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical|left" />

        <TextView
            android:id="@+id/info_cafe_name_text"
            style="@style/sign_in_title_style"
            android:text="@string/cafe_name" />


    </FrameLayout>

    <ImageView
        android:id="@+id/cafe_image"
        android:layout_width="306dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/melancholic_zoom" />

    <Button
        android:id="@+id/info_review_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:background="#00ff0000"
        android:fontFamily="@font/basic"
        android:text="@string/review"
        android:layout_gravity="right" />

    <ExpandableListView
        android:id="@+id/cafe_basic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:dividerHeight="0.5dp"
        android:paddingTop="8dp" />

</LinearLayout>